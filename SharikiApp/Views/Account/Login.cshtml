@model NetworkCredential
@{
    ViewBag.Title = "Вход в систему";
}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <h1 class="text-center login-title">Вход</h1>
                <img class="profile-img" src="@Url.Content("~/Content/photo.png")" alt="">

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
                {
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Email" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })

                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Войти
                    </button>
                    <span class="clearfix"></span>

                    if (Request.HttpMethod == "POST")
                    {
                        <div class="alert alert-danger">
                            Неверный логин или пароль
                        </div>
                    }
                }
                <a href="@Url.Action("Register","Account")" class="text-center new-account">Зарегистрироваться</a>
            </div>
        </div>
    </div>
</div>
