@model IEnumerable<SharikiApp.Core.Models.Balloon>
<div class="row">
    @using (Html.BeginForm("Index", "Balloons", FormMethod.Get, new {enctype = "multipart/form-data"}))
    {
        <div class="col-md-2">
            <input class="form-control" type="text" name="SearchText" value="" placeholder="Поиск.." />
        </div>
        <div class="col-md-3">
            @Html.DropDownList("BalloonTypeId", null, htmlAttributes: new {@class = "form-control"})
        </div>
        <div class="col-md-1">
            <input class="btn btn-primary" type="submit" value="Фильтровать"/>            
        </div>
    }
</div>
<div class="clearfix"></div>
<br/>
<hr />
<p>
    @Html.ActionLink("Добавить товар", "Create")
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Картинка
            </th>
            <th>
                Цена
            </th>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th>
                Скрытый
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="image-table">
                        <img class="img" src="/@ViewBag.Path/@item.BalloonImage" alt="@item.Name" title="@item.Description" />
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.Raw(item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hide)
                </td>
                <td>
                    @Html.ActionLink("ред.", "Edit", new { id = item.BalloonId }) |
                    @Html.ActionLink("уд.", "Delete", new { id = item.BalloonId })
                </td>
            </tr>
        }
    </tbody>
</table>
