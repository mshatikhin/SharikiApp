@using SharikiApp.Core.Models
@using SharikiApp.Models
@{
    Layout = null;
}
<div id="carousel-main" class="carousel slide carousel-main" data-ride="carousel" style="width: 100%;margin: 0 auto;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/main/carousel/detskiy_prazdnik.jpg" />
            <div class="carousel-caption">
                <h3>
                    @Html.ActionLink("Перейти...", "Decorate", "Home", new { type = BalloonTypeM.DetskiPrazdnik }, null)
                </h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/main/carousel/lyubimki.jpg" />
            <div class="carousel-caption">
                <h3>
                    @Html.ActionLink("Перейти...", "Decorate", "Home", new { type = BalloonTypeM.Lubimim }, null)
                </h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/main/carousel/net_oplaty.jpg" />
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="~/Content/main/carousel/vypiska.jpg" />
            <div class="carousel-caption">
                <h3>
                    @Html.ActionLink("Перейти...", "Decorate", "Home", new { type = BalloonTypeM.RodDom }, null)
                </h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-main" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Назад</span>
    </a>
    <a class="right carousel-control" href="#carousel-main" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Вперед</span>
    </a>
</div>