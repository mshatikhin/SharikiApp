@{
    Layout = null;
}
<div class="modal fade" id="callMeModal" tabindex="-1" role="dialog" aria-labelledby="callMeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CallMe", "Home", FormMethod.Post))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="callMeModalLabel">Обратный звонок</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Ваше имя</label>
                        <input type="text" name="FromName" class="form-control" value="" placeholder="Ваше имя" />
                    </div>
                    <div class="form-group">
                        <label class="control-label text-danger">Ваш телефон*</label>
                        <input type="tel" name="Phone" class="form-control" required="" placeholder="Ваш телефон" value="" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Подтвердить</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                </div>
            }
        </div>
    </div>
</div>

